<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new plant</h1>

      <%= simple_form_for @plant do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :quantity %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
